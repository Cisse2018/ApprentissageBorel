<?xml version="1.0" encoding="utf-8"?>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingTop="200dp"
        tools:context=".fragment.MenuListFragment">
        <TableRow>
            <ImageButton
                android:id="@+id/listen_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/what_about_btn"
                android:scaleType="fitXY"
                android:src="@drawable/menu_item_1" />
            <ImageButton
                android:id="@+id/what_about_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/menu_item_2" />
            <ImageButton
                android:id="@+id/gesture_order_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/what_about_btn"
                android:scaleType="fitXY"
                android:src="@drawable/menu_item_3" />

        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Ecoute et Répétition"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Trouve les lettres"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Ordonne les lettres"
                android:textSize="30sp"/>
        </TableRow>

    </TableLayout>


