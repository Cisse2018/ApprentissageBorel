<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="univ.m2acdi.apprentissageborel">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TextToSpeechActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.SectionIntroductActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.GestureToSpeechActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.OrderGestActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".activity.DataConfigActivity"></activity>

    </application>

</manifest>